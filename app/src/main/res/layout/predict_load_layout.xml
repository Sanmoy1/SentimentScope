<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >


    <EditText
        android:id="@+id/genderedittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="gender"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
         />
    <EditText
        android:id="@+id/marriedEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="married"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/dependentsEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dependents"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/EducationEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Education"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/self_employedEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Self employed"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/incomeEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Applicant Income"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/CoapplicantIncomeEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CoapplicantIncome"
        android:textColor="@color/black"
        android:inputType="number"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/LoanAmountEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loan Amount"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/Loan_Amount_TermEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Loan Amount Term"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/Credit_HistoryEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Credit History"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />
    <EditText
        android:id="@+id/Property_AreaEdittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Property Area"
        android:inputType="number"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="18dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/caluclateButton"
        android:layout_marginTop="15dp"
        android:text="Calculate"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:backgroundTint="@color/black"
        />
</LinearLayout>